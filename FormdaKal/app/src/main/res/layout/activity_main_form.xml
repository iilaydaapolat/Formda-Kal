<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#F4F1ED"
    tools:context=".MainActivityForm">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="406dp"
        android:layout_height="63dp"
        android:background="#F4F1ED"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/ip"
        app:navigationIcon="@drawable/back"
        app:titleTextColor="#0C0C0C" />

    <EditText

        android:id="@+id/editTextboy"
        android:layout_width="232dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="8dp"

        android:ems="10"
        android:hint="Boy:"
        android:includeFontPadding="false"
        android:inputType="numberDecimal|numberSigned"
        android:selectAllOnFocus="false"
        android:shadowColor="#FFFFFF"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textColorHighlight="#8b658b"
        android:textColorHint="#000000"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editTextkilo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextkilo"
        android:layout_width="234dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:hint="Kilo:"
        android:inputType="number|textPersonName"
        android:textColor="#040303"
        android:textColorHint="#000000"
        android:textColorLink="#8b658b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextboy" />

    <Button
        android:id="@+id/buttonhesapla"
        android:layout_width="133dp"
        android:layout_height="61dp"

        android:layout_marginStart="139dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/ovallastir"
        android:text="HESAPLA"
        android:textColor="#FAF9F9"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#F1C3C3"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextkilo" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="315dp"
        android:layout_height="69dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="48dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/textViewaciklama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonhesapla" />

    <TextView

        android:id="@+id/textViewaciklama"
        android:layout_width="383dp"
        android:layout_height="69dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="44dp"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView

        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="68dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/oval"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#F3EFEF"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar1" />


    <TextView
        android:id="@+id/textView63"
        android:layout_width="87dp"
        android:layout_height="29dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="7dp"
        android:text=" Cinsiyet:"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextboy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.923" />

    <CheckBox

        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="10dp"
        android:buttonTint="#8b658b"

        android:text="KadÄ±n"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextboy"
        app:layout_constraintEnd_toStartOf="@+id/checkBox3"
        app:layout_constraintStart_toEndOf="@+id/textView63"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="10dp"
        android:buttonTint="#8b658b"

        android:text="Erkek"
        android:textColor="#090909"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextboy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkBox2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>